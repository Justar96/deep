# Deep Agent Environment Configuration
# Based on documented environment variable conventions from docs/openai/env-vars.md

# Core API settings (required)
OPENAI_API_KEY=your-openai-api-key-here

# Model configuration
OPENAI_MODEL=gpt-5-mini
# Alternative: OPENAI_DEFAULT_MODEL=gpt-5

# Responses API behavior
OPENAI_USE_RESPONSES_DEFAULT=true
OPENAI_STREAM=true
OPENAI_RESP_STORE=true

# GPT-5 steering parameters
OPENAI_VERBOSITY=medium
OPENAI_REASONING_EFFORT=medium

# Advanced features
OPENAI_RESP_ENABLE_SUMMARY=false
OPENAI_RESP_INCLUDE_ENCRYPTED=false

# Tool access control
# FIBER_ALLOWED_TOOLS=web_search,file_search,code_interpreter

# Debugging
OPENAI_LOG_PATHS=false

# Node environment
NODE_ENV=development