{
  "name": "@deep-agent/monorepo",
  "version": "1.0.0",
  "description": "Deep - AI agent using OpenAI Responses API exclusively for multi-turn conversations",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "test": "npm run test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "test:cli": "npm run test --workspace=@deep-agent/cli",
    "test:core": "npm run test --workspace=@deep-agent/core",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:workspaces": "npm run lint --workspaces",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rimraf packages/core/dist packages/cli/dist packages/core/node_modules packages/cli/node_modules",
    "typecheck": "tsc --noEmit --composite false",
    "typecheck:workspaces": "npm run typecheck --workspaces",
    "dev:cli": "npm run dev --workspace=@deep-agent/cli",
    "dev:core": "npm run dev --workspace=@deep-agent/core",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.4.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  }
}
